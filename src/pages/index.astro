        width: 60px;
        height: auto; 
        transition: all 0.4s ease;
    }

    .hero-header.scrolled .logo-img {
        width: 35px; 
    }

    /* --- TEXTOS (Mantenemos el degradado rojo que te gustó) --- */
    .main-title {
        font-size: clamp(2.5rem, 8vw, 7rem); 
        font-weight: 900;
        line-height: 0.9;
        margin: 0;
        letter-spacing: -2px; 
        text-transform: uppercase;
        background: linear-gradient(135deg, #d83135 0%, #be2b2d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-header.scrolled .main-title { 
        font-size: 1.4rem; 
        line-height: 1.1;
    }

    .subtitle-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
        transition: all 0.4s ease;
    }

    .hero-header.scrolled .subtitle-container {
        margin-top: 0.1rem;
        gap: 0.5rem;
    }

    .subtitle {
        font-size: clamp(0.9rem, 2.5vw, 1.5rem);
        font-weight: 300;
        letter-spacing: 2px;
        color: #e0e0e0;
    }

    .hero-header.scrolled .subtitle { font-size: 0.8rem; }
    .hero-header.scrolled .line-break { display: none; }

    /* --- RESPONSIVE --- */
    @media (max-width: 768px) {
        .hero-header.scrolled .header-content {
