        background-image: url('/hero-robotica.jpg'); 
        background-size: cover;
        background-position: center;
        /* Ajustamos la opacidad del overlay para que el fondo no compita con el texto */
        box-shadow: inset 0 0 0 2000px rgba(0, 0, 0, 0.6); 
    }

    .content-section {
