    body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif; 
        background-color: #0a0a0a; 
        color: white;
        overflow-x: hidden;
    }

    /* --- CABECERA --- */
    .hero-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100px; 
        display: flex;
        align-items: center;
        z-index: 100;
        transition: all 0.4s ease;
    }

    .header-content {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        transition: none;
    }

    /* --- ESTADO SCROLLED (BARRA) --- */
