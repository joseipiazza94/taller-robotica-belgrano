---
// Layout para las noticias de la WRO
const { title, year, description, mainImg } = Astro.props;
---
<article class="post-wro">
  <div class="post-hero" style={`background-image: url(${mainImg})`}>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <a href="/#wro" class="back-link">‚Üê VOLVER AL FEED</a>
      <span class="post-year">{year}</span>
      <h1>{title}</h1>
    </div>
  </div>

  <div class="post-body">
    <div class="post-container">
      <p class="post-intro">{description}</p>
      <slot /> </div>
  </div>
</article>

<style>
  .post-wro { background: #121212; min-height: 100vh; color: white; }
  
  .post-hero {
    height: 60vh;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: 5% 8%;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, #121212, transparent);
  }

  .hero-content { position: relative; z-index: 10; width: 100%; }
  
  .back-link {
    color: #d83135;
    text-decoration: none;
    font-weight: 900;
    display: block;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    letter-spacing: 2px;
  }

  .post-year {
    background: #d83135;
    padding: 0.3rem 1rem;
    font-weight: 900;
  }

  h1 {
    font-size: clamp(3rem, 7vw, 6rem);
    font-weight: 900;
    text-transform: uppercase;
    margin-top: 1rem;
    line-height: 0.9;
  }

  .post-body { padding: 5rem 0; background: #1e1e1e; } /* Gris Industrial como los Pilares */
  
  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .post-intro {
    font-size: 1.8rem;
    color: #d83135;
    font-weight: 700;
    margin-bottom: 3rem;
    line-height: 1.3;
  }

  /* Estilos para el texto que escriba la directora */
  :global(.post-container p) {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #ccc;
    margin-bottom: 1.5rem;
  }
</style>