---
import { ViewTransitions } from 'astro:transitions';
interface Props { title: string; }
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title> 

    <ViewTransitions />

</head>
<body>
    <slot />
</body>
</html>

<style is:global>
    /* --- CONFIGURACIÓN BASE (TUYA) --- */
    body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif; 
        background-color: #0a0a0a; 
        color: white;
        overflow-x: hidden;
        /* Suavizado de tipografía para pantallas de alta densidad */
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        /* Scroll suave para los enlaces internos de la Navbar */
        scroll-behavior: smooth;
    }

    /* --- 1. BARRA DE SCROLL INSTITUCIONAL --- */
    /* El carril por donde corre la barra */
    ::-webkit-scrollbar {
        width: 10px;
        background: #0a0a0a;
    }

    /* La barra roja (el "thumb") */
    ::-webkit-scrollbar-thumb {
        background: #d53037; /* Rojo Belgrano */
        border-radius: 10px;
        /* El borde genera un efecto de separación muy fino */
        border: 2px solid #0a0a0a; 
    }

    /* Color cuando pasás el mouse sobre el scroll */
    ::-webkit-scrollbar-thumb:hover {
        background: #ff3d45;
    }

    /* --- 2. SELECCIÓN DE TEXTO PERSONALIZADA --- */
    /* Cambia el color azul por defecto al pintar texto */
    ::selection {
        background-color: #d53037;
        color: white;
    }

    /* --- 3. RESET GLOBAL DE ENLACES --- */
    /* Asegura que ningún link en el sitio sea azul o esté subrayado por defecto */
    a {
        text-decoration: none;
        color: inherit;
    }

  
</style>