---
// Datos de contacto
const contacto = {
  direccion: "Bartolomé Mitre 764, A4400 Salta",
  colegio: "Colegio Belgrano",
  whatsapp: "+54387XXXXXXX", 
  instagram: "https://instagram.com/tu_cuenta",
  horarios: "Atención: Lunes a Viernes - 14:00 a 18:00 hs"
};
---

<footer class="footer-section">
  <div class="footer-container">
    <div class="contact-grid">
      
      {/* BLOQUE 1: MAPA ESTÁNDAR (Reconocible y directo) */}
      <div class="contact-card map-box">
        <div class="map-label">
          <span class="status-tag">UBICACIÓN TALLER</span>
        </div>
        <div class="map-iframe-wrapper">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3622.187445775836!2d-65.412435523737!3d-24.78903330752528!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x941bc3bf3a894f31%3A0xcd0b362a39ec803a!2sColegio%20Belgrano!5e0!3m2!1ses-419!2sar!4v1700000000000!5m2!1ses-419!2sar" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>

      {/* BLOQUE 2: INFO Y ACCESO DIRECTO */}
      <div class="contact-card info-box">
        <div class="info-content">
          <span class="label">COLEGIO BELGRANO</span>
          <h3>Contacto Directo</h3>
          <p class="address-text">{contacto.direccion}</p>
          
          <div class="divider"></div>
          
          <p class="summary-text">Espacio exclusivo para la comunidad educativa del colegio. Consultas sobre inscripciones y niveles por canales oficiales.</p>
          
          <p class="horarios-tag">{contacto.horarios}</p>
        </div>
        
        <div class="social-links">
          <a href={`https://wa.me/${contacto.whatsapp}`} class="social-btn wa" target="_blank">
            <span>WHATSAPP DIRECTO</span>
          </a>
          <a href={contacto.instagram} class="social-btn ig" target="_blank">
            <span>INSTAGRAM OFICIAL</span>
          </a>
        </div>
      </div>

    </div>

    <div class="footer-bottom">
      <p>© {new Date().getFullYear()} Taller de Robótica - Colegio Belgrano Salta</p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background-color: #121212;
    padding: 80px 0 20px;
    color: white;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5%;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.3fr 0.7fr;
    gap: 20px;
    margin-bottom: 60px;
  }

  .contact-card {
    background: #1e1e1e; /* Gris Industrial */
    display: flex;
    flex-direction: column;
    min-height: 450px;
    border: 1px solid rgba(255,255,255,0.05);
  }

  /* MAPA ESTILO LIMPIO */
  .map-box { position: relative; padding: 15px; }
  
  .map-label {
    position: absolute;
    top: 30px;
    left: 30px;
    z-index: 10;
  }

  .status-tag {
    background: #d83135;
    color: white;
    padding: 6px 15px;
    font-weight: 900;
    font-size: 0.7rem;
    letter-spacing: 2px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
  }

  .map-iframe-wrapper {
    flex: 1;
    width: 100%;
    height: 100%;
    background: #252525;
  }

  /* INFO BOX */
  .info-box {
    padding: 40px;
    justify-content: space-between;
  }

  .label {
    color: #d83135;
    font-weight: 900;
    font-size: 0.7rem;
    letter-spacing: 2px;
    margin-bottom: 10px;
    display: block;
  }

  .info-box h3 {
    font-size: 2.5rem;
    font-weight: 900;
    text-transform: uppercase;
    line-height: 1;
    margin-bottom: 15px;
  }

  .address-text { color: #888; font-size: 1.1rem; }

  .divider {
    height: 1px;
    background: rgba(255,255,255,0.05);
    margin: 25px 0;
  }

  .summary-text {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #bbb;
    margin-bottom: 20px;
  }

  .horarios-tag {
    font-weight: 900;
    font-size: 0.75rem;
    color: #d83135;
    text-transform: uppercase;
  }

  /* BOTONES */
  .social-links { display: grid; gap: 10px; }

  .social-btn {
    padding: 18px;
    text-align: center;
    text-decoration: none !important;
    font-weight: 900;
    font-size: 0.8rem;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .wa { background: #d83135; color: white !important; }
  .ig { border: 1px solid rgba(255,255,255,0.1); color: white !important; }

  .social-btn:hover {
    background: white !important;
    color: #121212 !important;
    transform: translateY(-2px);
  }

  .footer-bottom {
    text-align: center;
    border-top: 1px solid rgba(255,255,255,0.05);
    padding-top: 30px;
  }

  .footer-bottom p { font-size: 0.7rem; color: #444; letter-spacing: 1px; }

  @media (max-width: 900px) {
    .contact-grid { grid-template-columns: 1fr; }
    .info-box { padding: 30px; }
  }
</style>